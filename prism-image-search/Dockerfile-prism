# Prism Dockfile
FROM ubuntu:latest

RUN apt-get update \
    && apt-get install -y python3 python3-pip \
    && pip3 install setuptools sql

RUN mkdir /prism-image-search
COPY . /prism-image-search

WORKDIR /prism-image-search/client-python
RUN python3 setup.py develop

WORKDIR /prism-image-search
RUN pip3 install -r requirements.txt
CMD waitress-serve --host 0.0.0.0 --port 8080 --threads 32 prism:app